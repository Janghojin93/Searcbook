<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Searchbook" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/base</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


    </style>

    <style name="search_book_background">
        <item name="android:background">@color/white</item>
    </style>

    <style name="search_book_recyclerview_background">
        <item name="android:background">@color/white</item>
    </style>


    <style name="search_book_edittext_style">
        <item name="startIconDrawable">@drawable/ic_baseline_search_24</item>
        <item name="hintTextColor">@color/base_dark</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:hint">@string/search_book_hint</item>

    </style>

    <style name="search_book_list_text_style">
        <item name="android:textColor">@color/base_dark</item>
    </style>

    <style name="detail_book_background">
        <item name="android:background">@color/base</item>
    </style>

    <style name="detail_book_back_button">
        <item name="android:src">@drawable/ic_baseline_arrow_back_dark</item>
        <item name="backgroundTint">@color/base</item>
    </style>

    <style name="detail_book_title_text_style">
        <item name="android:textColor">@color/base_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="detail_book_information_text_text_style">
        <item name="android:textColor">@color/base_dark</item>
        <item name="android:textSize">17dp</item>

    </style>

    <style name="detail_book_contents_text_text_style">
        <item name="android:textColor">@color/base_dark</item>
        <item name="android:textSize">15dp</item>
    </style>


</resources>